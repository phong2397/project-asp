@model IEnumerable<WebAdmin.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Order List</h2>

@using (Html.BeginForm())
{
    <label>From Date:</label>
    <input type="date" name="dFrom" placeholder="MM/dd/yyyy" />
    <label>To Date:</label>
    <input type="date" name="dTo" placeholder="MM/dd/yyyy" />
    <input type="submit" value="Search" class="btn btn-warning" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayName("User Account")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayName("Address Delivery")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderStatus)
        </th>


    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerAddress)
        </td>
       
       
            @if (item.OrderStatus == false)
            {
            <td>
                <a class="btn-sm btn-danger" style="color:aquamarine;" href="@Url.Action("ChangeStatus","Admins",new { id = item.InvoiceId})" data-toggle="tooltip" data-placement="left" title="Click here to activate member account" onclick="return confirm('Are you sure?')">Waiting...&nbsp&nbsp</a>
            </td>
        }
        else
        {
            <td>
                <a class="btn-sm btn-primary" style="color:aquamarine;" href="@Url.Action("ChangeStatus","Admins",new { id = item.InvoiceId})" data-toggle="tooltip" data-placement="left" title="Click here to lock member account" onclick="return confirm('Are you sure?')">Completed</a>
            </td>
        }
          
            <td>
               
                @Html.ActionLink("Details", "OrderDetailsIndex", new { id = item.InvoiceId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>
