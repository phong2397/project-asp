@model IEnumerable<WebAdmin.Models.FeedBack>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Feedback List</h2>

<div>
    @using (Html.BeginForm("FeedbackIndex", "Admins", FormMethod.Get))
    {

        <label>Search by name:</label>
        <input type="text" name="fName" placeholder="Enter any character" />
        <input type="submit" value="Search" class="btn btn-warning"/>

    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("User's Fullname")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.ActionLink("Details", "FeedbackDelete", new { id = item.ContactId }, new { @CLASS = "btn btn-primary" })
        </td>
    </tr>
    }
</table>
