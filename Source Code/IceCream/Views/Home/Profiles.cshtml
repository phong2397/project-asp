@model IceCream.Models.Customer

@{
    ViewBag.Title = "Profile";

}
<link href="~/Content/Profile-design.css" rel="stylesheet" type="text/css" />



<div id="title-profile">
    <div id="title-profile-design">
        <h2 style="text-align:center;margin-left:-25px">Profile</h2>
    </div>
</div>

<div id="menu-profile-style">
    <div id="menu-profile">
        <ul>
            <li style="background-color:aqua;border-bottom:groove aqua;"><a href='@Url.Action("Profiles","Home")'>Information Account</a></li>
            <li><a href='@Url.Action("ChangePassWord","Home")'>Change Password</a></li>
            <li><a href='@Url.Action("RegisterMember","Home")'>Register Account Customer</a></li>
            <li style="border-bottom:none;"><a href='@Url.Action("Logout","Home")'>Logout</a></li>
        </ul>
    </div>
    <div id="form-profile">
        <div id="fix-form-profile">
            <h2 style="text-align:center;margin-left:-80px;font-family:HP-Ashley;padding-bottom:20px">Information Account</h2>
            
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal" style="padding-right:50px">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CustomerId)


                <div class="wrap-input100 rs1-wrap-input100 validate-input">
                    <span class="label-input100">Customer Email</span>
                    @Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100 validate-input">
                    <span class="label-input100">Full name</span>
                    @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
                </div>


                <div class="wrap-input100 rs1-wrap-input100 validate-input">
                    <span class="label-input100">Phone</span>
                    @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 rs1-wrap-input100 validate-input">
                    <span class="label-input100">Address</span>
                    @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
                    <span class="focus-input100"></span>
                </div>


    

                <div class="container-contact100-form-btn">
                    <button class="btn btn-primary" style="margin-top:30px"  onclick="return confirm('Are you sure you want to Update ?')">
                        <span>
                            Update
                            <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
            </div>
            }
        </div>
    </div>
</div>




