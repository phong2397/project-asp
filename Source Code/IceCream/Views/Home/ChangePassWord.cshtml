@model IceCream.Models.CustomerMeta

@{

    ViewBag.Title = "Change Password";
}
<link href="~/Content/Profile-design.css" rel="stylesheet" type="text/css" />



<div id="title-profile">
    <div id="title-profile-design">
        <h2 style="text-align:center;margin-left:-25px">Profile</h2>
    </div>
</div>

<div id="menu-profile-style">
    <div id="menu-profile">
        <ul>
            <li><a href='@Url.Action("Profiles","Home")'>Information Account</a></li>
            <li style="background-color:aqua;border-bottom:groove aqua;"><a href='@Url.Action("ChangePassWord","Home")'>Change Password</a></li>
            <li><a href='@Url.Action("RegisterMember","Home")'>Register Account Customer</a></li>
            <li style="border-bottom:none;"><a href='@Url.Action("Logout","Home")'>Logout</a></li>
        </ul>
    </div>
    <div id="form-profile">

        <div id="fix-form-profile">
            <h2 style="text-align:center;margin-left:-80px;font-family:HP-Ashley;padding-bottom:20px">Change Password</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-md-4">
                            <span class="label-input100">Old Password</span>
                        </div>


                        <div class="col-md-6">
                            @Html.EditorFor(model => model.CustomerPassword, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.CustomerPassword, "", new { @class = "text-danger" })
                            <span id="erro-oldpass" style="color:red;"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <span class="label-input100">New Password</span>
                        </div>
                        <div class="col-md-6">
                            <input type="password" class="form-control" id="newpass" required="" name="newpassword" />
                            <span id="erro-newpass" style="color:red;"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <span class="label-input100">Re-Password</span>
                        </div>
                        <div class="col-md-6">
                            <input type="password" class="form-control" id="renewpass" name="repassword" required="" onkeyup="check_repass()" />
                            <span id="erro-renewpass" style="color:red;"></span>
                        </div>
                    </div>
                    <div class="container-contact100-form-btn" style="margin-left:200px;">
                        <button class="btn btn-primary" style="margin-top:30px" onclick="check_changepass()">
                            <span>
                                Update
                                <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                            </span>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    function check_repass() {
        var newpass = document.getElementById("newpass").value;
        var renewpass = document.getElementById("renewpass").value;
        document.getElementById("erro-renewpass").innerHTML = "";
        if (renewpass != newpass) {
            document.getElementById("erro-renewpass").innerHTML = "The password is not correct";
        }
    }
    function check_changepass() {
        var newpass = document.getElementById("newpass").value;
        var renewpass = document.getElementById("renewpass").value;
        var check = "true";
        var oldpass = document.getElementById("oldpass").value;
        if (newpass == null) {
            document.getElementById("erro-oldpass").innerHTML = "Old password can't be blank!!";
            check = "false";
        }
        if (renewpass == null) {
            document.getElementById("erro-newpass").innerHTML = "New password can't be blank!!";
            check = "false";
        }
        if (oldpass == null) {
            document.getElementById("erro-renewpass").innerHTML = "Re-New password can't be blank!!";
            check = "false";
        }
        return check;
    }
</script>



