@model IEnumerable<IceCream.Models.Product>
@{
    ViewBag.Title = "Book";


}

<div class="super_container">
    <div class="container">
        <!-- ##### Subscribe Area Start ##### -->
        <section class="subscribe-newsletter-area">
            <div class="container">
                <div class="row align-items-center justify-content-between">
                    <div class="col-12 col-lg-5">
                        <!-- Section Heading -->
                        <div class="section-heading mb-0">
                            <h2>Dessert</h2>
                            <p>Subscribe to our latest books </p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="subscribe-form">
                            <form action="~/Product/Book" method="get">
                                <input type="text" name="pName" style="font-size:14px" placeholder="Enter Dessert name">
                                <button type="submit" class="btn alazea-btn">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subscribe Side Thumbnail -->
            <div class="subscribe-side-thumb wow fadeInUp" data-wow-delay="500ms">
                <img class="first-img" src="~/images/leaf.png" />
            </div>
        </section>
        <!-- ##### Subscribe Area End ##### -->
        <!-- Single Product Area -->
       
        <div>
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-lg-3">
                    <div class="single-product-area mb-50 wow fadeInUp" data-wow-delay="100ms">
                        <!-- Product Image -->
                        <div class="product-img">
                            <a href="@Url.Action("ProductDetails","Product",new { id=item.ProductId},null)" @*class="Show-Details"*@>
                                <img src="@item.Image" />
                            </a>
                            <!-- Product Tag -->

                            <div class="product-meta d-flex">
                                <a href="#" class="wishlist-btn"><i class="icon_heart_alt">Like</i></a>
                                <a href="@Url.Action("OrderNow","ShoppingCart",new { id=item.ProductId},null)" class="add-to-cart-btn" >Add to cart</a>
                                <a href="#" class="compare-btn"><i class="arrow_left-right_alt">Buy</i></a>

                            </div>
                        </div>
                        <!-- Product Info -->
                        <div class="product-info mt-15 text-center">
                            <h6>
                                <p>@item.Name</p>
                            </h6>
                            <h6>$@item.Price</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!--#####View More Products######-->
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="block-27">
                <ul>
                    <li><a href="#">&lt;</a></li>
                    <li class="active"><a href="~/Product/Book?page=1">1</a></li>
                    <li class="active"><a href="~/Product/Book?page=2">2</a></li>
                    <li class="active"><a href="~/Product/Book?page=3">3</a></li>

                    <li><a href="#">&gt;</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
